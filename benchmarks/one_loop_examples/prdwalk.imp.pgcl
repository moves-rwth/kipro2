// ARGS: --ert --post 0 --pre "1.14286*(n+4-x)" --assert-inductive 1
// examples/NCH-18/linear/prdwalk.imp
nat x;
nat n;
nat r;
while (x < n) {
    {
        r := 0 : 1/3 + 1 : 1/3 + 2 : 1/3;
        x := x + r;
    } [1/2] {
        r := 0 : 1/6 + 1 : 1/6 + 2 : 1/6 + 3 : 1/6 + 4 : 1/6 + 5 : 1/6;
        x := x + r;
    }
    tick(2);
}
